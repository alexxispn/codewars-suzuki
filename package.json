{
  "name": "codewars-suzuki",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "resetMocks": false
  },
  "devDependencies": {
    "@types/jest": "^28.1.2",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "ts-jest": "^28.0.5"
  },
  "dependencies": {
    "jest": "^28.1.1",
    "chai": "^4.3.6"
  }
}
